# Database
# Railway akan otomatis set DATABASE_URL dari database service
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Server
PORT=3001

# JWT Secret
# Buat secret key yang kuat untuk production
JWT_SECRET=your-secret-key-change-in-production

# Node Environment
NODE_ENV=production

# CORS (Optional)
# Jika ingin restrict origin, set seperti: "https://yourdomain.com,https://www.yourdomain.com"
# Kosongkan atau set "*" untuk allow all origins
ALLOWED_ORIGINS=*

# Email Configuration (Optional - untuk fitur email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tokoku.com

# WhatsApp Configuration (Optional - untuk fitur WhatsApp)
# Provider options: twilio, meta, custom, cloud-api
WHATSAPP_PROVIDER=twilio
WHATSAPP_ACCOUNT_SID=your-account-sid
WHATSAPP_AUTH_TOKEN=your-auth-token
WHATSAPP_FROM=whatsapp:+1234567890
